{
  "dashboard": {
    "title": "FLM Proxy Dashboard",
    "tags": ["flm", "proxy", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 2,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(flm_proxy_requests_total[5m])",
            "legendFormat": "Requests/sec",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "yaxes": [
          {
            "format": "reqps",
            "label": "Requests/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 2,
        "title": "Request Status Distribution",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(flm_proxy_requests_success[5m])",
            "legendFormat": "Success (2xx)",
            "refId": "A"
          },
          {
            "expr": "rate(flm_proxy_requests_failed[5m])",
            "legendFormat": "Failed (4xx/5xx)",
            "refId": "B"
          },
          {
            "expr": "rate(flm_proxy_requests_rate_limited[5m])",
            "legendFormat": "Rate Limited",
            "refId": "C"
          },
          {
            "expr": "rate(flm_proxy_requests_blocked[5m])",
            "legendFormat": "Blocked",
            "refId": "D"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "yaxes": [
          {
            "format": "reqps",
            "label": "Requests/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 3,
        "title": "Active Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "flm_proxy_connections_active",
            "legendFormat": "Active Connections",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "yaxes": [
          {
            "format": "short",
            "label": "Connections"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 4,
        "title": "Authentication Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(flm_proxy_auth_success[5m])",
            "legendFormat": "Success",
            "refId": "A"
          },
          {
            "expr": "rate(flm_proxy_auth_failure[5m])",
            "legendFormat": "Failure",
            "refId": "B"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "yaxes": [
          {
            "format": "ops",
            "label": "Auth/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 5,
        "title": "Security Events Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(flm_proxy_intrusions_detected[5m])",
            "legendFormat": "Intrusions",
            "refId": "A"
          },
          {
            "expr": "rate(flm_proxy_anomalies_detected[5m])",
            "legendFormat": "Anomalies",
            "refId": "B"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "yaxes": [
          {
            "format": "ops",
            "label": "Events/sec"
          },
          {
            "format": "short"
          }
        ]
      },
      {
        "id": 6,
        "title": "Request Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(flm_proxy_requests_success[5m]) / rate(flm_proxy_requests_total[5m]) * 100",
            "legendFormat": "Success Rate",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 16
        },
        "options": {
          "unit": "percent",
          "decimals": 2
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "red"
                },
                {
                  "value": 95,
                  "color": "yellow"
                },
                {
                  "value": 99,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Total Requests",
        "type": "stat",
        "targets": [
          {
            "expr": "flm_proxy_requests_total",
            "legendFormat": "Total",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 16
        },
        "options": {
          "unit": "short"
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"]
    }
  },
