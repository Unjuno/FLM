{
  "dashboard": {
    "title": "FLM Proxy Dashboard",
    "tags": ["flm", "proxy", "monitoring"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
        "targets": [
          {
            "expr": "rate(flm_proxy_requests_total[5m])",
            "legendFormat": "Requests/sec",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Requests/sec"
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "mode": "time"
        }
      },
      {
        "id": 2,
        "title": "Request Status Distribution",
        "type": "piechart",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
        "targets": [
          {
            "expr": "flm_proxy_requests_success",
            "legendFormat": "Success",
            "refId": "A"
          },
          {
            "expr": "flm_proxy_requests_failed",
            "legendFormat": "Failed",
            "refId": "B"
          },
          {
            "expr": "flm_proxy_requests_rate_limited",
            "legendFormat": "Rate Limited",
            "refId": "C"
          },
          {
            "expr": "flm_proxy_requests_blocked",
            "legendFormat": "Blocked",
            "refId": "D"
          }
        ]
      },
      {
        "id": 3,
        "title": "Active Connections",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
        "targets": [
          {
            "expr": "flm_proxy_connections_active",
            "legendFormat": "Active Connections",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Connections"
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "mode": "time"
        }
      },
      {
        "id": 4,
        "title": "Authentication Rate",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
        "targets": [
          {
            "expr": "rate(flm_proxy_auth_success[5m])",
            "legendFormat": "Auth Success",
            "refId": "A"
          },
          {
            "expr": "rate(flm_proxy_auth_failure[5m])",
            "legendFormat": "Auth Failure",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Auth/sec"
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "mode": "time"
        }
      },
      {
        "id": 5,
        "title": "Security Events Rate",
        "type": "graph",
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
        "targets": [
          {
            "expr": "rate(flm_proxy_intrusions_detected[5m])",
            "legendFormat": "Intrusions",
            "refId": "A"
          },
          {
            "expr": "rate(flm_proxy_anomalies_detected[5m])",
            "legendFormat": "Anomalies",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Events/sec"
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "mode": "time"
        }
      },
      {
        "id": 6,
        "title": "Request Success Rate",
        "type": "gauge",
        "gridPos": { "h": 8, "w": 6, "x": 12, "y": 16 },
        "targets": [
          {
            "expr": "(rate(flm_proxy_requests_success[5m]) / rate(flm_proxy_requests_total[5m])) * 100",
            "legendFormat": "Success Rate",
            "refId": "A"
          }
        ],
        "options": {
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "value": 0, "color": "red" },
              { "value": 80, "color": "yellow" },
              { "value": 95, "color": "green" }
            ]
          }
        }
      },
      {
        "id": 7,
        "title": "Total Requests",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 18, "y": 16 },
        "targets": [
          {
            "expr": "flm_proxy_requests_total",
            "legendFormat": "Total",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value"
        }
      },
      {
        "id": 8,
        "title": "Total Failed Requests",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 18, "y": 20 },
        "targets": [
          {
            "expr": "flm_proxy_requests_failed",
            "legendFormat": "Failed",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value"
        }
      },
      {
        "id": 9,
        "title": "Total Rate Limited",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 12, "y": 24 },
        "targets": [
          {
            "expr": "flm_proxy_requests_rate_limited",
            "legendFormat": "Rate Limited",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value"
        }
      },
      {
        "id": 10,
        "title": "Total Blocked",
        "type": "stat",
        "gridPos": { "h": 4, "w": 6, "x": 18, "y": 24 },
        "targets": [
          {
            "expr": "flm_proxy_requests_blocked",
            "legendFormat": "Blocked",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "value"
        }
      }
    ]
  }
}
