{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FLM",
  "version": "1.0.0",
  "identifier": "com.flm.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "FLM - Local LLM API Manager",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "dragDropEnabled": false
      }
    ],
    "macOSPrivateApi": true,
    "withGlobalTauri": true,
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' http://localhost:* https://localhost:* http://127.0.0.1:* https://127.0.0.1:* http://localhost:11434 http://localhost:1420 https://api.github.com https://huggingface.co https://*.huggingface.co; frame-ancestors 'none'; base-uri 'self'; form-action 'self';"
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "pubkey": ""
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi",
      "nsis",
      "dmg",
      "app",
      "deb",
      "appimage"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "https://timestamp.digicert.com",
      "nsis": {
        "displayLanguageSelector": true,
        "installMode": "perMachine",
        "installerIcon": "icons/icon.ico",
        "headerImage": "icons/Square284x284Logo.png",
        "sidebarImage": "icons/Square150x150Logo.png",
        "license": "../LICENSE",
        "customScript": "installer/install-ca.nsh"
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "11.0",
      "exceptionDomain": "",
      "signingIdentity": "",
      "providerShortName": "",
      "entitlements": null,
      "dmg": {
        "postinstall": "installer/postinstall.sh"
      }
    },
    "linux": {
      "deb": {
        "depends": [
          "libgtk-3-0",
          "libayatana-appindicator3-1"
        ],
        "postinst": "installer/postinst"
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "resources": [
      "resources/scripts/install-ca.ps1",
      "resources/scripts/install-ca.sh",
      "resources/scripts/uninstall-ca.ps1",
      "resources/scripts/uninstall-ca.sh",
      "resources/certs"
    ],
    "externalBin": [],
    "copyright": "© 2024 FLM. All rights reserved.",
    "category": "Utility",
    "shortDescription": "初心者でも外部公開できる安全なローカルLLM API管理ツール",
    "longDescription": "FLMは、初心者でも外部に公開して使える安全なAPIが、インストールして実行するだけで手に入るデスクトップアプリケーションです。技術知識がなくても、コードを書かずに、直感的なUIでローカルLLMのAPIを作成・デプロイし、そのAPIを外部からも安全に利用できます。セキュリティ設定は自動化されているため、誰でも簡単に安全なAPIを作成・公開できます。"
  }
}
