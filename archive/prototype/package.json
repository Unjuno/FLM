{
  "name": "flm",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "dependencies": {
    "@tanstack/react-virtual": "^3.13.12",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-dialog": "^2.4.2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-updater": "^2.9.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.1",
    "recharts": "^2.15.4"
  },
  "devDependencies": {
    "@axe-core/react": "^4.11.0",
    "@jest/globals": "^29.7.0",
    "@tauri-apps/cli": "^2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.11",
    "@types/node-forge": "^1.3.14",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^5.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "node-forge": "^1.3.1",
    "prettier": "^3.6.2",
    "ts-jest": "^29.1.2",
    "typescript": "~5.5.4",
    "vite": "^7.2.2"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:dev:debug": "powershell -Command \"$env:FLM_DEBUG='1'; npm run tauri:dev\"",
    "tauri:build": "tauri build",
    "tauri:build:windows": "tauri build --target x86_64-pc-windows-msvc",
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --watch --config jest.config.cjs",
    "test:coverage": "jest --coverage --config jest.config.cjs",
    "test:website": "jest --testPathPattern=e2e/f008-website --config jest.config.cjs",
    "test:integration": "jest tests/integration --config jest.config.cjs",
    "test:certificate": "jest tests/unit/certificate-generation.test.ts tests/integration/certificate-auto-generation.test.ts --config jest.config.cjs",
    "test:e2e": "jest tests/e2e --config jest.config.cjs",
    "test:performance": "jest tests/performance --config jest.config.cjs",
    "test:security": "jest tests/security --config jest.config.cjs",
    "test:ui": "jest tests/unit --testPathPattern=\\.test\\.tsx --config jest.config.cjs",
    "test:accessibility": "jest tests/accessibility --config jest.config.cjs",
    "test:api": "jest tests/api --config jest.config.cjs",
    "lint": "eslint src/ tests/ --ext .ts,.tsx",
    "lint:fix": "eslint src/ tests/ --ext .ts,.tsx --fix",
    "format": "prettier --check \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\"",
    "format:fix": "prettier --write \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\"",
    "type-check": "tsc --noEmit",
    "quality-check": "npm run lint && npm run type-check && npm run format",
    "security:audit": "npm audit --audit-level=moderate",
    "security:audit:fix": "npm audit fix",
    "security:audit:cargo": "cd src-tauri && cargo audit",
    "security:check": "npm run security:audit && npm run security:audit:cargo"
  }
}
